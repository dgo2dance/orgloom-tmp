}
/* arrow common style */
.arrow {
  display: inline-block;
    width: 5px;
    height: 5px;
    line-height: 6px;
   
    border-top: 2px solid rgb(255, 255, 255);
    border-right: 2px solid rgb(255, 255, 255);
}

.arrow-top {
  transform: rotate(-45deg);
  margin-top: 2px;
}
.arrow-right {
  transform: rotate(45deg);
}
.arrow-bottom {
  transform: rotate(135deg);
  margin-bottom: 2px;
}
.arrow-left {
  transform: rotate(-135deg);
}


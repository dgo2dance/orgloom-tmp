.ui-booklist-card {

  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  background-color: #fff;
  
  }
  /* 书单封面 */
  .ui-booklist-card__img {
    height: 24px;
    width: 24px;
    margin-right: 10px;
  }
  /* 书单信息 */
  .ui-booklist-card__info {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
  }
  /* 书单标题 */
  .ui-booklist-card__info-title {
    margin-bottom: 5px;
  }

  /**
 * “更多”图标、图标区域：长宽30px
 */
.ui-icon-more-area {
    height: 30px;
    text-align: center;
    width: 30px;
  }
  .ui-icon-more {
    position: relative;
    top: 5px;
    width: 20px;
  }
  
  .card{
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    margin-bottom:-14px;
  }

  .paren{

    position: relative;
    margin-top: 10px;
    margin-bottom: 5px;
    width: 100%;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
  }

  .left-paren{
    border-top: 2px solid #0a0a0b; 
    margin: 0 10%;
    width: 31%;
  }

  .left-paren::before{
    border-top: 2px solid #0a0a0b;
    border-left: 2px solid #0a0a0b;
     border-top-left-radius: 8px; 
    margin-left: -10%;
    margin-top: -2px;
    content: "";
    width: calc(10% + 1px);
    height: 12px;
    position: absolute;
    display: block;
  }

  .left-paren::after{
    border-bottom: 2px solid #0a0a0b;
    border-right: 2px solid #0a0a0b;
    border-bottom-right-radius: 8px;
    margin-left: 30%;
    margin-top: -12px;
    content: "";
    width: calc(10%);
    height: 10px;
    position: absolute;
    display: block;

  }

  .right-paren {
    border-top: 2px solid #0a0a0b; 
    margin: 0 10%;
    width: 31%;
  }

  .right-paren::before{
    border-bottom: 2px solid #0a0a0b;
    border-bottom-left-radius: 8px;
    margin-left: calc(-10% - 1px);
    margin-top: -12px;
    border-left: 2px solid #0a0a0b;
    content: "";
    width: calc(10%);
    height: 10px;
    position: absolute;
    display: block;
  }
.right-paren::after{

  border-top: 2px solid #0a0a0b;
    border-top-right-radius: 8px;
    margin-left: 30%;
    border-right: 2px solid #0a0a0b;
    margin-top: -2px;
    content: "";
    width: calc(10% + 1px);
    height: 12px;
    position: absolute;
    display: block;
}


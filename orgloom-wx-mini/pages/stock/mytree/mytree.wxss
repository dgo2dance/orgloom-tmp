.bottom-button{

  position: absolute;
    bottom: -10px;
    left: 50%;
    -webkit-transform: translateX(-50%);
    -ms-transform: translateX(-50%);
    transform: translateX(-50%);
    width: -webkit-fit-content;
    width: -moz-fit-content;
    width: fit-content;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    margin: 0;
    padding: 0;
    border-width: 0;
    background: #2d2d2d;
    border-radius: 4px;
    color: #fff;
    text-decoration: none;
    font-size: inherit;
    outline: none;
    font-family: Basis Grotesque Pro,HelveticaNeue,sans-serif;
    overflow: visible;
    padding: 6rpx;
    font-size: 24rpx;
}

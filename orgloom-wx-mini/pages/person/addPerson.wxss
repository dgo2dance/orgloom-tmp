/* show delete button at right|top corner */
.box {
  box-sizing: border-box;
  position: relative;
}

.box .del {
  position:absolute;
  top: -21rpx;
  right: -21rpx;
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, .3);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.box .del image {
  width: 32rpx;
  height: 32rpx;
}

.bar {
  display: flex;
  align-items: center;
}

.bar .item {
  margin: 0px 16rpx;
  padding: 0px;
}
.bar .item:hover {
  background: #eee
}

.bar image {
  vertical-align: middle;
  width: 56rpx;
  height: 56rpx;
  padding: 8rpx 8rpx;
}

/* button */
.btn-submit {
  width: 86%;
